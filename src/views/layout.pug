doctype html
html
  head
    title WanderWorte
    meta(charset='utf-8') 
    link(rel="icon", href="/images/l.png", type="image/png")
    link(rel='stylesheet', href='/output.css')
    link(rel='stylesheet', href='/style.css')
  body
    nav(class="bg-gray-800 p-4 flex justify-between items-center fixed top-0 left-0 right-0 z-50")
      .left.flex.items-center.space-x-4
        span(class="text-white text-2xl classical-font") WanderWorte
        ul.flex.space-x-4
          li
            a(class="text-white hover:text-gray-400" href="/wander/v1/home") Home
          li
            a(class="text-white hover:text-gray-400" href="/wander/v1/users/createposts") Create a Post
          li
            a(class="text-white hover:text-gray-400" href="/wander/v1/users/userposts") Your Posts
      .right.flex.items-center.space-x-4
        .profile-circle.relative
          img(class="w-10 h-10 rounded-full" src=user.profilePicture alt="User Picture")

          .dropdown-menu.absolute.right-0.mt-2.w-48.bg-white.rounded-md.shadow-lg.hidden
            a(class="block px-4 py-2 text-gray-800 hover:bg-gray-100" href="/wander/v1/users/profile") Profile
            a(class="block px-4 py-2 text-gray-800 hover:bg-gray-100" href="/wander/v1/users/security") Security
            a#logout(class="block px-4 py-2 text-gray-800 hover:bg-gray-100" href="/wander/v1/users/logout") Logout

    main
      block content


          
    script(src="/uploadimg.js") 
    script. 
          document.addEventListener('DOMContentLoaded', () => {
          const profileCircle = document.querySelector('.profile-circle');
          const dropdownMenu = profileCircle.querySelector('.dropdown-menu');

          profileCircle.addEventListener('click', (e) => {
            e.stopPropagation();
            dropdownMenu.classList.toggle('hidden');
          });

          document.addEventListener('click', (e) => {
            if (!profileCircle.contains(e.target)) {
              dropdownMenu.classList.add('hidden');
            }
          });
        });